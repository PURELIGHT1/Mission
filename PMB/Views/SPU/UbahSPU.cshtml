@{
    ViewData["Title"] = "Ubah Data SPU Mahasiswa";
}
@model SPUMhsView

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-header">
                <h3 class="card-title">Ubah Data SPU</h3>
            </div>
            <!-- /.card-body -->
            <div class="card-body">
                <div class="col-md-6">
                    <form asp-action="UbahSPU" asp-controller="SPU" method="post">
                        <div class="form-group">
                            <label>ID Calon Mahasiswa</label>
                            <input class="form-control" asp-for="SPUCalonMhs.kd_calon" readonly />
                        </div>
                        <div class="form-group">
                            <label>Nama Calon Mahasiswa</label>
                            @* <input class="form-control" asp-for="SPUCalonMhs.nama_calon" readonly /> *@
                        </div>
                        <div class="form-group">
                            <label>Tahun Akademik</label>
                            <input class="form-control" asp-for="SPUCalonMhs.thnakademik" readonly />
                        </div>
                        <div class="form-group">
                            <label>SPU</label>
                            <input class="form-control" asp-for="SPUCalonMhs.spu"/>
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input class="form-control" asp-for="SPUCalonMhs.username"/>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="SPUCalonMhs.is_matrikulasi">
                                <label class="form-check-label" asp-for="SPUCalonMhs.is_matrikulasi">
                                    Matrikulasi
                                </label>
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                    </form>
                    <a href="SPUMahasiswa" class="btn btn-sm btn-warning" style="margin-left: 80px; margin-top: -60px">Batal</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}