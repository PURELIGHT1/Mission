@{
    ViewData["Title"] = "Ubah Master Angsuran";
}
@model MstAngsuranView

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ubah Data Master Angsuran</h3>
            </div>
            <div class="card-body">
                <div class="col-md-4">
                    <form asp-action="UbahMstAgs" asp-controller="MstAngsuran" method="post">
                        <div class="form-group">
                            <label>ID Rumus Angsuran</label>
                            <input class="form-control" asp-for="MstAngsuran.id_rumus" readonly />
                        </div>
                        <div class="form-group">
                            <label>Tahun Akademik</label>
                            <input class="form-control" asp-for="MstAngsuran.thnakademik" disabled />
                        </div>
                        <div class="form-group">
                            <label>Nama Jalur</label>
                            <br />
                            <select class="form-control" asp-for="MstAngsuran.kd_jalur" disabled>
                                <option selected>@Model.MstAngsuran.nama_jalur</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Jumlah Angsuran</label>
                            <input class="form-control" asp-for="MstAngsuran.jlh_angsuran" />
                        </div>
                        <div class="form-group">
                            <label>Periode</label>
                            <input class="form-control" asp-for="MstAngsuran.periode" />
                        </div>
                        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                    </form>
                    <a href="javascript:history.back()" class="btn btn-sm btn-warning" style="margin-left: 80px; margin-top: -60px">Batal</a>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                Pengubahan data angsuran
            </div>
            <!-- /.card-footer-->
        </div>
    </div>
</div>