@{
    ViewData["Title"] = "Pengelolaan Master Angsuran";
}
@model MstAngsuranView

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-header">
                <h3 class="card-title">Tambah Data Master Angsuran</h3>
            </div>
            <!-- /.card-body -->
            <div class="card-body">
                <div class="col-md-4">
                    <form asp-action="TambahMstAngsuran" asp-controller="MstAngsuran" method="post">
                        <div class="form-group">
                            <label>ID Rumus Angsuran</label>
                            <input class="form-control text-center" asp-for="MstAngsuran.id_rumus" />
                        </div>
                        <div class="form-group">
                            <label>Tahun Akademik</label>
                            <input class="form-control" asp-for="MstAngsuran.thnakademik" />
                            <span class="badge bg-danger" style="font-size: 10pt; margin-top: 5px" asp-validation-for="MstAngsuran.thnakademik"></span>
                        </div>
                        <div class="form-group">
                            <label>Nama Jalur</label>
                            <br />
                            <select class="form-select" asp-for="MstAngsuran.kd_jalur">
                                <option selected style="text-align: center;" value="">-- Pilih Nama Jalur --</option>
                                @foreach (var data in Model.JalurList)
                                {
                                    <option value="@data.kd_jalur">@data.nama_jalur</option>
                                }
                            </select>
                            <span class="badge bg-danger" style="font-size: 10pt; margin-top: 5px" asp-validation-for="MstAngsuran.kd_jalur"></span>
                        </div>
                        @if(Model.MstAngsuran.jlh_angsuran == null){
                            <div class="form-group">
                                <label>Jumlah Angsuran</label>
                                <input class="form-control" asp-for="MstAngsuran.jlh_angsuran" value="0"/>
                            </div>
                        }else{
                            <div class="form-group">
                                <label>Jumlah Angsuran</label>
                                <input class="form-control" asp-for="MstAngsuran.jlh_angsuran"/>
                            </div>
                        }

                        @if(Model.MstAngsuran.periode == null){
                            <div class="form-group">
                                <label>Periode</label>
                                <input class="form-control" asp-for="MstAngsuran.periode" value="0"/>
                            </div>
                        }
                        else{
                            <div class="form-group">
                                <label>Periode</label>
                                <input class="form-control" asp-for="MstAngsuran.periode" />
                            </div>
                        }
                        
                        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                    </form>
                    <a href="MstAngsuran/MstAngsuran" class="btn btn-sm btn-warning" style="margin-left: 80px; margin-top: -60px">Batal</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}