@{
    ViewData["Title"] = "Pengelolaan Rumus Angsuran";
}
@model RmsAngsuranView

<div class="row">
    <div class="col-md-11">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-header">
                <h3 class="card-title">Ubah Data Rumus Angsuran</h3>
            </div>
            <!-- /.card-body -->
            <div class="card-body">
                <div class="col-md-6">
                    <form asp-action="UbahRumus" asp-controller="RumusAngsuran" method="post">
                        <div class="form-group">
                            <label>Nomor Rumus</label>
                            <input type="number" class="form-control" asp-for="RmsAngsuran.id_detail" readonly/>
                        </div>
                        <div class="form-group">
                            <label>ID Rumus Angsuran</label>
                            <input type="number" class="form-control" asp-for="RmsAngsuran.id_rumus" readonly />
                        </div>
                        <div class="form-group">
                            <label>Angsuran Ke</label>
                            <input type="number" class="form-control" asp-for="RmsAngsuran.angsuran_ke" readonly />
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2">
                                <label>Persentase</label>
                                <input type="number" class="form-control" asp-for="RmsAngsuran.prosentase" />
                                <span class="badge bg-danger" style="font-size: 10pt; margin-top: 5px" asp-validation-for="RmsAngsuran.prosentase"></span>
                            </div>
                            <div class="col-md-1" style="margin-top: 40px;">
                                <i class="bi bi-percent"></i>
                            </div>
                            <div class="col-md-9">
                                <label>Jenis Tagihan</label>
                                <br />
                                <select class="form-select" asp-for="RmsAngsuran.id_tagihan">
                                    <option selected style="text-align: center;" value="@Model.RmsAngsuran.id_tagihan">@Model.RmsAngsuran.jenis_tagihan</option>
                                    @foreach (var item in Model.TagihanList)
                                    {
                                        <option value="@item.id_tagihan" style="text-align: center;">@item.nama_tagihan</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Batas Awal</label>
                            <input type="date" class="form-control text-center" asp-for="RmsAngsuran.tgl_buka" />
                        </div>
                        <div class="form-group">
                            <label>Batas Akhir</label>
                            <input type="date" class="form-control text-center" asp-for="RmsAngsuran.tgl_tutup" />
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="RmsAngsuran.is_jaminan">
                                <label class="form-check-label" asp-for="RmsAngsuran.is_jaminan">
                                    Jaminan
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                    </form>
                    <a href="~/MstAngsuran/DetailMstAngsuran?id_rumus=@Model.RmsAngsuran.id_rumus" class="btn btn-sm btn-warning" style="margin-left: 80px; margin-top: -60px">Batal</a>
                </div>
            </div>
        </div>
    </div>
</div>